<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UpdatePasswordServlet</servlet-name>
        <servlet-class>profile_servlet.UpdatePasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateName</servlet-name>
        <servlet-class>profile_servlet.UpdateName</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>session_servlet.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>session_servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RideSearch</servlet-name>
        <servlet-class>ride_booking.RideSearch</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/SignUpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePasswordServlet</servlet-name>
        <url-pattern>/UpdatePasswordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateName</servlet-name>
        <url-pattern>/UpdateName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RideSearch</servlet-name>
        <url-pattern>/RideSearch</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>
          index.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
